---
import background from '../assets/background.svg';
import teaLogo from '../assets/tea.svg';
import Menu from '../components/Hamburger.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Formosa Tea</title>
	</head>
	<body style="background-color:#171c27;"> <!-- #F2F0EF -->
		<img id="background" src={background.src} alt="" fetchpriority="high" />
		<a href="/"
				><img src={teaLogo.src} width="400" height="400" alt="Formosa Tea" /></a>
		<Menu />
		<slot />
	</body>
</html>

<style>
	html {
		align-items: center;
	}
	body {
		/* color: #695651;  */
		color: #e6fbf1;
		font-family: HelveticaNeue-Light,"Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,sans-serif;
		height: 80vh auto;
		width: calc(100% -2em);
		max-width: 100%;
		font-size: 1rem;
		font-weight: 400;
		letter-spacing: .075rem;
		line-height: 1.5;
		padding: 80px;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
	img {
		align-self: center;
		width: 100%;
	}
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(80px);
	}
</style>
